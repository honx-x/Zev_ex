<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Zev_A2_1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#EAE1DA"
            android:orientation="horizontal">


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="최근검색"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="즐겨찾는 충전소"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="즐겨찾는 장소"></Button>


        </LinearLayout>

        <FrameLayout

            android:id="@+id/main_frame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:text="● 시/도, 도로명, 충전소명으로 검색"
                        android:textStyle="bold"
                        >

                    </TextView>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="#ffffff"
                        android:hint="  (현위치 주소 디폴트)"
                        android:textSize="15sp">

                    </EditText>

                </LinearLayout>

                <RelativeLayout

                    android:id="@+id/a2_1_map_view"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                </RelativeLayout>



        </FrameLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>